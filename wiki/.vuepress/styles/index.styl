    font-size: 1.25rem;
    padding: 0;
    margin: 0 0 1.5rem 0;
    height: auto;

    a{
      color: $orange;
      text-decoration: none;
      border-left: 2px solid $orange;
      padding: .25rem 0 .4rem 1.25rem;

      &:hover {
        color: $red;
        border-color: $red;
      }
    }

    .prefix {
      //font-weight: normal;
    }

    .shortname {
      //font-weight: bold;
    }
  }
  h3 {
    display: inline-block;
    font-size: 1.25rem;
    border: none;
    border-top: 2px solid $black;
    padding-top: .625rem;
    margin: 2.5rem 0 1.25rem 0;
  }
  h3.visible {
    margin-top: 0;

    a {
      color: inherit;
      font-weight: inherit;

      &:hover {
        color: inherit;
        border-bottom: none;
      }
    }
  }
  h4 {
    margin: 0 0 .25rem 0;
    padding: 0rem;
  }
  ul {
    margin: 0;
  }
  li {
