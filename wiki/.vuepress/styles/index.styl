  }
}

.custom-block.tip {
  background-color: $purplebg;
  color: $purple;
  border: none;
  margin: 1.5rem 0;
  padding: 1rem 1rem 1rem 3.5rem;
  position: relative;

  p:last-child {
    margin-bottom: 0;
  }

  .custom-block-title {
    position: absolute;
    top: 1rem;
    left: 1rem;
    width: 1.5rem;
    height: 1.5rem;
    background: transparent;
    color: transparent;
    overflow: hidden;
    text-indent: -999px;
    background-image: url(/images/info.svg);
    background-position: center;
    background-size: 100%;
    background-repeat: no-repeat;
  }

  a {
    color: $purple;
    border-bottom: 1px solid lighten($purple, 40%);

    &:hover {
      color: lighten($purple, 40%);
      border-bottom-color: lighten($purple, 60%);
      text-decoration: none;
    }
  }

  code {
    color: $purple;
    background: transparent;
  }
}

