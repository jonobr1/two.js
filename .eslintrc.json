{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"commonjs": true,
		"amd": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2015
	},
	"rules": {
		"semi": ["error", "always"],
		"no-unused-vars": "off"
	},
	"overrides": [
		{
			"files": ["utils/**"],
			"env": {
				"node": true,
				"es6": true
			},
			"parserOptions": {
				"ecmaVersion": 8
			}
		},
		{
			"files": ["tests/**"],
			"globals": {
				"QUnit": "writable",
				"resemble": "writable",
				"Two": "writable",
				"_": "writable"
			},
			"rules": {
				"no-redeclare": "off"
			}
		}
	],
	"ignorePatterns": ["build/", "utils/start-comment.js", "utils/end-comment.js", "utils/exports.js", "junk/"]
}
